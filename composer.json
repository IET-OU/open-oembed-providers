{
  "name": "iet-ou/open-media-player-core",
  "description": "Core of the Open Media Player. Â©2015 The Open University, UK.",
  "keywords": [ "ouplayer", "MediaPlayer", "audio", "video", "mediaelementjs", "oEmbed", "accessibility", "OpenUniversity", "IET-OU" ],
  "homepage": "https://mediaplayer.open.ac.uk",
  "type": "library",
  "license": "proprietary",
  "minimum-stability": "dev",
  "authors": [
    { "name": "Nick Freear (@nfreear)", "role": "developer" },
    { "name": "Peter Devine (@peterdevinegmd", "role": "designer", "homepage": "http://devine.co.uk/peter/" }
  ],
  "support": {
    "email": "iet-webmaster@open.ac.uk",
    "issues": "https://github.com/IET-OU/ouplayer/issues",
    "source": "https://github.com/IET-OU/open-media-player-core"
  },
  "require": {
    "php": ">=5.3.3",
    "ext-curl": "*",
    "ext-xml": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "~2.1.0",
    "jakub-onderka/php-parallel-lint": "~0.8",
    "phpunit/phpunit": "~4.0"
  },
  "autoload": {
    "psr-4": {
      "IET_OU\\Open_Media_Player\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IET_OU\\Open_Media_Player\\Test\\": "tests"
    }
  },
  "scripts": {
    "test": [
      "composer validate #--no-interaction",
      "parallel-lint src/*",
      "#phpcs --standard=./phpcs.xml -n --encoding=utf-8 --extensions=php src/*",
      "phpunit"
    ],
    "test-x": [
      "phpcs --standard=PSR2 -n --encoding=utf-8 --extensions=php src/*"
    ],
    "fix": [
      "phpcbf --standard=./phpcs.xml -n -l  --encoding=utf-8 --extensions=php src/X*"
    ]
  },
  "config": {
    "preferred-install": "dist"
  },
  "extra": {
    "//": [
      "http://www.testically.org/2010/08/24/best-practice-how-to-ship-phpunit-configuration/",
      "https://gist.github.com/nfreear/57262e040d49b2f212ec"
    ]
  }
}